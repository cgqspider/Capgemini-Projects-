@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>
<body onload="LoadData()">

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Ram Kishan AJAX EXAMPLE</a>
    </div>
    <ul class="nav navbar-nav">
        
     
    </ul>
  </div>
</nav>
  
<div class="container form-horizontal">
   <div id="success" class="alert alert-success alert-dismissible fade in">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
     <p id="msg"></p>
  </div>

      <div class="form-group">
      <label class="control-label col-sm-2" for="id">Id:</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" id="id" disabled placeholder="Enter Your Id" />
      </div>
    </div>
 
    <div class="form-group">
      <label class="control-label col-sm-2" for="name">Name:</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" id="name" placeholder="Enter Name" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="salary">Salary:</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control" id="salary" placeholder="Enter salary" />
      </div>
    </div>

       <div class="form-group">
      <label class="control-label col-sm-2" for="deptid">DepId:</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control" id="deptid" placeholder="Enter Department ID" />
      </div>
    </div>
    
      
       <div class="form-group">
      <label class="control-label col-sm-2" for="location">Location:</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control" id="location" placeholder="Enter location" />
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" id="smt" class="btn btn-default" onclick="addorupdate()">Submit</button>
      </div>
    </div>

   
  
</div>
    <div class="container">
    <table id="employee" class="table table-stripped ">
        <tr>
            <th>Name</th>
             <th>Salary</th>
             <th>Department Id</th>
             <th>Location</th>
             <th>Action</th>
        </tr>

    </table>
        </div>

</body>

    <script>
        function addorupdate()
        {
            var empobj = {
                Id:$('#id').val(),
                Name: $('#name').val(),
                Salary: $('#salary').val(),
                DeptId: $('#deptid').val(),
                Location: $('#location').val(),
            };

            if (document.getElementById('smt').innerHTML=="Submit")
            {
                add(empobj);
            }
            else{
                PostEdit(empobj);
              }

            


           
        }


        function add(empobj)
        {
            $.ajax({
                url: "/Home/Add",
                data: JSON.stringify(empobj),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var trHtml = '';
                    trHtml += '<tr><td>' + result.Name + '</td>' + '<td>' + result.Salary + '</td>' + '<td>' + result.DeptId + '</td>' + '<td>' + result.Location + '</td><td><a class="btn btn-success" onclick="GetEdit(' + result.Id + ')" >edit</a> <button class="btn btn-danger" onclick="Delete(' + result.Id + ')">Delete</button></td></tr>'
                    $("#employee").append(trHtml);
                    document.getElementById("msg").innerHTML = "<strong>Success! <strong>Data Inserted Successfully";
                    $("#success").show();
                    $("#success").delay(1800).slideUp(300);
                    Clear_Form();

                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }

            });


        }

        function Clear_Form()
        {

            $('#name').val("");
            $('#salary').val("");
            $('#deptid').val("");
            $('#location').val("");

        }


        function LoadData()
        {

            $("#success").hide();

            $.ajax({
                url: "/Home/GetAll",
                type: "GET",
                contentType: "application/Json;charset=UTF-8",
                dataType: "Json",
                success: function (result) {

                    var trHtml = '';
                    $("#employee").append(trHtml);
                    $.each(result, function (i, item) {
                        console.log(item.Id);
                        trHtml += '<tr><td>' + result[i].Name + '</td>' + '<td>' + result[i].Salary + '</td>' + '<td>' + result[i].DeptId + '</td>' + '<td>' + result[i].Location + '</td> <td><a class="btn btn-success" onclick="GetEdit(' + item.Id + ')">edit</a>  <a class="btn btn-danger" onclick="Delete(' + item.Id + ')">Delete</a></td></tr>'

                    });
                    $("#employee").append(trHtml);

                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }

            });


        }

        //================================================
        
        function Delete(id) {
            var ans = confirm("Are you sure you want to delete this record ? " +id);
            if (ans) {
                $.ajax({
                    url: "/Home/Delete/" + id,

                    type: "POST",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        document.getElementById("msg").innerHTML = "<strong>Success! <strong>Data Deleted Successfully";
                        $("#success").show();
                        $("#success").delay(1800).slideUp(300);
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }

                });

            }
        }

        function GetEdit(id)
        {

            $.ajax({
                url: "/Home/Find/"+id,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    $('#id').val(result.Id);
                    $('#name').val(result.Name);
                    $('#salary').val(result.Salary);
                    $('#deptid').val(result.DeptId);
                    $('#location').val(result.Location);
                    document.getElementById('smt').innerHTML = "Update";



                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }

            });
        }

        function PostEdit(empobj)
        {

            $.ajax({
                url: "/Home/Update",
                data: JSON.stringify(empobj),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    document.getElementById("msg").innerHTML = "<strong>Success! <strong>Data Updated Successfully";
                    $("#success").show();
                    $("#success").delay(1800).slideUp(300);
                    Clear_Form();
                    document.getElementById('smt').innerHTML = "Submit";

                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }

            });

        }
        

    </script>
</html>
